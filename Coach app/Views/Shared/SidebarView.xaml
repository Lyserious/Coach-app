<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coach_app.Views.Shared.SidebarView"
             BackgroundColor="{StaticResource BrandNavyBlue}">
    <ContentView.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="TextColor" Value="{StaticResource NeutralWhite}" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="ContentLayout" Value="Left,15" />
            <Setter Property="HorizontalOptions" Value="Fill" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="OpenSansSemibold" />
            <Setter Property="Padding" Value="15,0" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{StaticResource BrandDarkBlue}" />
                                <Setter Property="TextColor" Value="{StaticResource BrandCoral}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentView.Resources>

    <Grid RowDefinitions="Auto, *, Auto" Padding="15,30">

        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,40">
            <Image Source="dotnet_bot.png" HeightRequest="50" HorizontalOptions="Center"/>
            <Label Text="COACH TRACKER" 
                   FontSize="14" 
                   FontFamily="OpenSansSemibold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource BrandCoral}"
                   CharacterSpacing="1"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1" Spacing="5">

            <Button Text="Accueil" 
                    ImageSource="dotnet_bot.png" 
                    Style="{StaticResource NavButtonStyle}"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="//Dashboard"
                    HorizontalOptions="Start"
                    BorderColor="Transparent"
                    />

            <Button Text="Mes Groupes" 
                    ImageSource="dotnet_bot.png"
                    Style="{StaticResource NavButtonStyle}"     
                    Command="{Binding NavigateCommand}"
                    CommandParameter="//Groups"
                    HorizontalOptions="Start"
                    BorderColor="Transparent"/>

            <Button Text="Exercices" 
                    ImageSource="dotnet_bot.png"
                    Style="{StaticResource NavButtonStyle}"                 
                    Command="{Binding NavigateCommand}"
                    CommandParameter="//Exercises"
                    HorizontalOptions="Start"
                    BorderColor="Transparent"/>

            <Button Text="Elèves" 
                    ImageSource="dotnet_bot.png"
                    Style="{StaticResource NavButtonStyle}"                  
                    Command="{Binding NavigateCommand}"
                    CommandParameter="//StudentLibraryView"
                    HorizontalOptions="Start"
                    BorderColor="Transparent"/>

            <Button Text="Séances Types" 
                    ImageSource="dotnet_bot.png"
                    Style="{StaticResource NavButtonStyle}"                  
                    Command="{Binding NavigateCommand}"
                    CommandParameter="//SessionTemplates"
                    HorizontalOptions="Start"
                    BorderColor="Transparent"/>

        </VerticalStackLayout>

        <Button Grid.Row="2" 
                Text="Paramètres" 
                BackgroundColor="{StaticResource BrandCoral}" 
                TextColor="{StaticResource NeutralWhite}"
                FontFamily="OpenSansSemibold"
                CornerRadius="12"
                HeightRequest="50"
                Margin="0,20,0,0"
                Shadow="{Shadow Radius=5, Opacity=0.3}"
                Command="{Binding NavigateCommand}"
                CommandParameter="SettingsView"/>
    </Grid>
</ContentView>