<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Coach_app.ViewModels.Students"
             x:Class="Coach_app.Views.Students.StudentPhotoDetailView"
             BackgroundColor="Black"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Padding="20" ZIndex="1">
            <ImageButton Grid.Column="0" Source="dotnet_bot.png" 
                         Command="{Binding GoBackCommand}" 
                         HeightRequest="30" WidthRequest="30" 
                         HorizontalOptions="Start"
                         BackgroundColor="#88000000" CornerRadius="15"/>

            <ImageButton Grid.Column="2" Source="dotnet_bot.png" 
                         Command="{Binding SharePhotoCommand}" 
                         HeightRequest="30" WidthRequest="30" 
                         HorizontalOptions="End"
                         BackgroundColor="#88000000" CornerRadius="15"/>
        </Grid>

        <Image Grid.Row="0" Grid.RowSpan="2" 
               Source="{Binding PhotoPath}" 
               Aspect="AspectFit" 
               HorizontalOptions="Fill" 
               VerticalOptions="Fill"/>
    </Grid>
</ContentPage>