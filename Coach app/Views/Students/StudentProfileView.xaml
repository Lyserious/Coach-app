<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Coach_app.ViewModels.Students"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Coach_app.Views.Students.StudentProfileView"
             Title="{Binding Student.DisplayName}">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" Command="{Binding LoadDataCommand}" />
    </ContentPage.Behaviors>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Modifier" Command="{Binding EditStudentCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto, Auto, *" Padding="0" BackgroundColor="White">

        <Grid Grid.Row="0" ColumnDefinitions="120, *" Padding="20" ColumnSpacing="15">
            <Frame Grid.Column="0" HeightRequest="120" WidthRequest="120" CornerRadius="60" 
                   Padding="0" IsClippedToBounds="True" BorderColor="LightGray" HorizontalOptions="Center">
                <Image Source="{Binding Student.ProfilePhotoPath, Converter={StaticResource StringNullToImageConverter}}" 
                       Aspect="AspectFill"/>
            </Frame>

            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                <Grid ColumnDefinitions="*, Auto">
                    <HorizontalStackLayout Grid.Column="0" Spacing="8" VerticalOptions="Center">
                        <Label Text="{Binding Student.DisplayName}" FontSize="20" FontAttributes="Bold" TextColor="Black" LineBreakMode="TailTruncation"/>
                        <Label Text="{Binding Student.Age, StringFormat='({0} ans)'}" FontSize="16" TextColor="Gray" VerticalOptions="End" Margin="0,0,0,2"/>
                    </HorizontalStackLayout>
                    <Button Grid.Column="1" Text="âœŽ" 
                            Command="{Binding EditStudentCommand}"
                            FontSize="22" TextColor="{StaticResource Primary}"
                            BackgroundColor="Transparent" HeightRequest="40" WidthRequest="40" Padding="0" Margin="0,-5,0,0"/>
                </Grid>

                <Label Text="{Binding Student.MaxLevel, StringFormat='Niveau Max : {0}'}" FontSize="14" TextColor="{StaticResource Primary}" FontAttributes="Bold"/>
                <BoxView HeightRequest="1" Color="LightGray" Margin="0,5"/>

                <FlexLayout Direction="Row" Wrap="Wrap" AlignItems="Center">
                    <HorizontalStackLayout Spacing="3" Margin="0,0,15,0">
                        <Label Text="ðŸ“ž" FontSize="14"/>
                        <Label Text="{Binding Student.PhoneNumber, TargetNullValue='-'}" FontSize="13" TextColor="Gray"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="3">
                        <Label Text="ðŸ“§" FontSize="14"/>
                        <Label Text="{Binding Student.Email, TargetNullValue='-'}" FontSize="13" TextColor="Gray" LineBreakMode="TailTruncation"/>
                    </HorizontalStackLayout>
                </FlexLayout>

                <HorizontalStackLayout Spacing="5">
                    <Label Text="ðŸ“·" FontSize="14"/>
                    <Label Text="{Binding Student.PhotoConsent, TargetNullValue='Non dÃ©fini'}" FontSize="13" TextColor="{StaticResource Primary}" FontAttributes="Bold"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*" Padding="0,10">
            <Button Grid.Column="0" Text="Inscriptions" Command="{Binding SwitchTabCommand}" CommandParameter="0" 
                    BackgroundColor="Transparent" TextColor="{Binding Tab0Color}" FontAttributes="Bold" FontSize="12"/>
            <Button Grid.Column="1" Text="Photos" Command="{Binding SwitchTabCommand}" CommandParameter="1" 
                    BackgroundColor="Transparent" TextColor="{Binding Tab1Color}" FontAttributes="Bold" FontSize="12"/>
            <Button Grid.Column="2" Text="Notes" Command="{Binding SwitchTabCommand}" CommandParameter="2" 
                    BackgroundColor="Transparent" TextColor="{Binding Tab2Color}" FontAttributes="Bold" FontSize="12"/>
            <Button Grid.Column="3" Text="Stats" Command="{Binding SwitchTabCommand}" CommandParameter="3" 
                    BackgroundColor="Transparent" TextColor="{Binding Tab3Color}" FontAttributes="Bold" FontSize="12"/>
            <BoxView Grid.ColumnSpan="4" HeightRequest="1" Color="LightGray" VerticalOptions="End"/>
        </Grid>


        <Grid Grid.Row="2" Padding="20">

            <VerticalStackLayout IsVisible="{Binding IsInscriptionsVisible}" Spacing="15">
                <Label Text="Liste des groupes (Code abrÃ©gÃ© pour l'exemple)..." TextColor="Gray"/>
            </VerticalStackLayout>


            <VerticalStackLayout IsVisible="{Binding IsPhotosVisible}">
                <Label Text="Galerie photos Ã  venir..." HorizontalOptions="Center" TextColor="Gray"/>
            </VerticalStackLayout>


            <Grid IsVisible="{Binding IsNotesVisible}">

                <CollectionView ItemsSource="{Binding Notes}">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="Aucune note." TextColor="Gray" HorizontalOptions="Center"/>
                            <Label Text="Utilisez le + pour ajouter une observation." TextColor="LightGray" FontSize="10" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15" Margin="0,0,0,10" CornerRadius="10" BackgroundColor="#FFFBF0" BorderColor="#FFE0B2" HasShadow="True">
                                <Grid ColumnDefinitions="*, Auto">
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding Content}" TextColor="Black" FontSize="14"/>
                                        <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy Ã  HH:mm}'}" TextColor="Gray" FontSize="10"/>
                                    </VerticalStackLayout>

                                    <ImageButton Grid.Column="1" Source="dotnet_bot.png" 
                                                 Command="{Binding Source={RelativeSource AncestorType={x:Type vm:StudentProfileViewModel}}, Path=DeleteNoteCommand}"
                                                 CommandParameter="{Binding .}"
                                                 HeightRequest="20" WidthRequest="20"
                                                 VerticalOptions="Start" BackgroundColor="Transparent" Opacity="0.5"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button Text="+" 
                        Command="{Binding AddNoteCommand}"
                        FontSize="30"
                        TextColor="White"
                        BackgroundColor="{StaticResource Primary}"
                        CornerRadius="30"
                        HeightRequest="60"
                        WidthRequest="60"
                        HorizontalOptions="End"
                        VerticalOptions="End"
                        Margin="20"
                        Shadow="{Shadow Brush=Black, Offset='2,4', Opacity=0.4}"/>
            </Grid>


            <VerticalStackLayout IsVisible="{Binding IsStatsVisible}" VerticalOptions="Center">
                <Label Text="ðŸš§ Stats (A venir)" FontSize="20" TextColor="Gray" HorizontalOptions="Center"/>
            </VerticalStackLayout>

        </Grid>
    </Grid>
</ContentPage>