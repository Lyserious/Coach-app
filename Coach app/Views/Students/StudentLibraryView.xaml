<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Coach_app.ViewModels.Students"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:shared="clr-namespace:Coach_app.Views.Shared"
             x:Class="Coach_app.Views.Students.StudentLibraryView"
             Title="{Binding Title}">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" Command="{Binding LoadDataCommand}" />
    </ContentPage.Behaviors>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{OnPlatform WinUI='250', MacCatalyst='250', Default='0'}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <shared:SidebarView Grid.Column="0" IsVisible="{OnPlatform WinUI='True', MacCatalyst='True', Default='False'}" />

        <Grid Grid.Column="1" RowDefinitions="Auto, Auto, *, Auto" Padding="20" RowSpacing="10">

            <SearchBar Grid.Row="0"
                       Placeholder="Rechercher (Nom, Prénom, Surnom)..."
                       Text="{Binding SearchText}"
                       BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#333}"
                       CancelButtonColor="{StaticResource Primary}"/>

            <Grid Grid.Row="1" ColumnDefinitions="*, Auto">
                <ScrollView Grid.Column="0" Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                    <HorizontalStackLayout Spacing="8" Padding="0,5">

                        <Button Text="Nom" Command="{Binding SortByCommand}" CommandParameter="LastName" 
                                FontSize="12" Padding="15,0" HeightRequest="35" CornerRadius="18" BackgroundColor="LightGray" TextColor="Black"/>

                        <Button Text="Prénom" Command="{Binding SortByCommand}" CommandParameter="FirstName" 
                                FontSize="12" Padding="15,0" HeightRequest="35" CornerRadius="18" BackgroundColor="LightGray" TextColor="Black"/>

                        <Button Text="Age" Command="{Binding SortByCommand}" CommandParameter="Age" 
                                FontSize="12" Padding="15,0" HeightRequest="35" CornerRadius="18" BackgroundColor="LightGray" TextColor="Black"/>

                        <Button Text="Niveau" Command="{Binding SortByCommand}" CommandParameter="Level" 
                                FontSize="12" Padding="15,0" HeightRequest="35" CornerRadius="18" BackgroundColor="LightGray" TextColor="Black"/>

                        <Button Text="Surnom" Command="{Binding SortByCommand}" CommandParameter="Nickname" 
                                FontSize="12" Padding="15,0" HeightRequest="35" CornerRadius="18" BackgroundColor="LightGray" TextColor="Black"/>
                    </HorizontalStackLayout>
                </ScrollView>

                <Button Grid.Column="1" 
                        Text="{Binding SortDirectionIcon}" 
                        Command="{Binding ToggleSortDirectionCommand}"
                        BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold"/>
            </Grid>

            <CollectionView Grid.Row="2" 
                            ItemsSource="{Binding Students}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedStudent}">

                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="Aucun élève trouvé." TextColor="Gray"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,0,0,10" CornerRadius="10" BorderColor="LightGray" HasShadow="False">
                            <Grid ColumnDefinitions="50, *, Auto">
                                <Image Grid.Column="0" Source="{Binding ProfilePhotoPath, Converter={StaticResource StringNullToImageConverter}}" 
                                       Aspect="AspectFill" HeightRequest="50" WidthRequest="50">
                                    <Image.Clip>
                                        <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
                                    </Image.Clip>
                                </Image>

                                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Margin="15,0,0,0">
                                    <Label Text="{Binding DisplayName}" FontAttributes="Bold" FontSize="16"/>
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="{Binding Age, StringFormat='{0} ans'}" FontSize="12" TextColor="Gray"/>
                                        <Label Text="{Binding MaxLevel, StringFormat='• Niveau : {0}'}" FontSize="12" TextColor="{StaticResource Primary}"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <Label Grid.Column="2" Text="›" FontSize="24" TextColor="LightGray" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Grid.Row="3" Text="+ Nouvel Élève" 
                    Command="{Binding AddStudentCommand}"
                    BackgroundColor="{StaticResource Primary}" 
                    TextColor="White" CornerRadius="25" HeightRequest="50"/>
        </Grid>
    </Grid>
</ContentPage>