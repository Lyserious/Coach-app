<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Coach_app.ViewModels.Home"
             xmlns:shared="clr-namespace:Coach_app.Views.Shared"
             x:Class="Coach_app.Views.Home.DashboardView"
             Title="{Binding Title}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{OnPlatform WinUI='250', MacCatalyst='250', Default='0'}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <shared:SidebarView Grid.Column="0" 
                            IsVisible="{OnPlatform WinUI='True', MacCatalyst='True', Default='False'}" />

        <Grid Grid.Column="1" RowDefinitions="Auto, *" Padding="20">
            <VerticalStackLayout Grid.Row="0" Spacing="5">
                <Label Text="{Binding WelcomeMessage}" 
                       FontSize="24" 
                       FontAttributes="Bold" />
                <Label Text="Prêt pour une nouvelle séance ?" 
                       TextColor="Gray" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Les groupes s'afficheront ici..." FontAttributes="Italic"/>
                <Button Text="Se déconnecter" 
                        Command="{Binding LogoutCommand}" 
                        Margin="0,20,0,0"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>

</ContentPage>