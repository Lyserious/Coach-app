<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Coach_app.ViewModels.Groups"
             xmlns:models="clr-namespace:Coach_app.Models"
             xmlns:shared="clr-namespace:Coach_app.Views.Shared"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" 
             x:Class="Coach_app.Views.Groups.GroupsView"
             Title="{Binding Title}">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" Command="{Binding LoadGroupsCommand}" />
    </ContentPage.Behaviors>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{OnPlatform WinUI='250', MacCatalyst='250', Default='0'}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <shared:SidebarView Grid.Column="0" IsVisible="{OnPlatform WinUI='True', MacCatalyst='True', Default='False'}" />

        <Grid Grid.Column="1" RowDefinitions="Auto, *" Padding="20" BackgroundColor="#F5F5F5">

            <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,20">
                <Label Text="Groupes rÃ©currents &amp; Stages" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black"/>
                <Button Grid.Column="1" Text="+ CrÃ©er" Command="{Binding AddGroupCommand}"
                        BackgroundColor="{StaticResource Primary}" TextColor="White" HeightRequest="40" CornerRadius="20"/>
            </Grid>

            <CollectionView Grid.Row="1" 
                            ItemsSource="{Binding Groups}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedGroup}">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="{OnIdiom Phone=1, Tablet=2, Desktop=3}" VerticalItemSpacing="15" HorizontalItemSpacing="15"/>
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
                        <Label Text="ðŸ“­" FontSize="40" HorizontalOptions="Center"/>
                        <Label Text="Aucun groupe trouvÃ©" TextColor="Gray" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Group">
                        <Frame Padding="0" CornerRadius="15" HasShadow="True" BorderColor="Transparent" HeightRequest="200" IsClippedToBounds="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GroupLibraryViewModel}}, Path=GoToGroupDetailCommand}" CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <Grid RowDefinitions="2*, 1*">
                                <Image Source="{Binding PhotoPath, Converter={StaticResource StringNullToImageConverter}}" 
                                       Aspect="AspectFill" 
                                       Grid.RowSpan="2"
                                       BackgroundColor="#333"/>
                                <BoxView Color="Black" Opacity="0.1" Grid.RowSpan="2"/>

                                <Border BackgroundColor="White" HorizontalOptions="End" VerticalOptions="Start" Margin="10" Padding="8,4" StrokeShape="RoundRectangle 10" StrokeThickness="0">
                                    <Label Text="{Binding Type}" FontSize="10" FontAttributes="Bold" TextColor="Black"/>
                                </Border>

                                <VerticalStackLayout Grid.Row="1" BackgroundColor="White" Padding="15,10" Spacing="2">
                                    <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                                    <Label Text="{Binding Schedule}" FontSize="12" TextColor="Gray"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>