<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Coach_app.ViewModels.Groups"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Coach_app.Views.Groups.SessionDetailView"
             Title="Détail Séance">

    <Grid RowDefinitions="Auto, *, Auto">

        <Frame Grid.Row="0" BackgroundColor="{StaticResource Primary}" CornerRadius="0" Padding="20" HasShadow="False">
            <VerticalStackLayout Spacing="5">
                <Label Text="{Binding GroupName}" TextColor="White" FontSize="20" FontAttributes="Bold"/>
                <Label Text="{Binding DateDisplay}" TextColor="White" FontSize="16" Opacity="0.9"/>
                <Label Text="{Binding TimeDisplay}" TextColor="White" FontSize="14" Opacity="0.8"/>
            </VerticalStackLayout>
        </Frame>

        <CollectionView Grid.Row="1" ItemsSource="{Binding AttendanceList}" Margin="15">
            <CollectionView.Header>
                <Label Text="Faire l'appel" FontAttributes="Bold" FontSize="18" Margin="0,0,0,15" TextColor="Black"/>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,10" Padding="10" CornerRadius="10" HasShadow="True" BorderColor="Transparent">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SessionDetailViewModel}}, Path=TogglePresenceCommand}" CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <Frame.Triggers>
                            <DataTrigger TargetType="Frame" Binding="{Binding IsPresent}" Value="True">
                                <Setter Property="BackgroundColor" Value="#E8F5E9"/>
                                <Setter Property="BorderColor" Value="Green"/>
                            </DataTrigger>
                            <DataTrigger TargetType="Frame" Binding="{Binding IsPresent}" Value="False">
                                <Setter Property="BackgroundColor" Value="White"/>
                                <Setter Property="BorderColor" Value="Transparent"/>
                            </DataTrigger>
                        </Frame.Triggers>

                        <Grid ColumnDefinitions="50, *, Auto">
                            <Frame Grid.Column="0" HeightRequest="40" WidthRequest="40" CornerRadius="20" Padding="0" IsClippedToBounds="True">
                                <Image Source="{Binding PhotoPath, Converter={StaticResource StringNullToImageConverter}}" Aspect="AspectFill"/>
                            </Frame>

                            <Label Grid.Column="1" Text="{Binding DisplayName}" VerticalOptions="Center" Margin="10,0" FontAttributes="Bold" TextColor="Black"/>

                            <Label Grid.Column="2" Text="{Binding IsPresent, Converter={toolkit:BoolToObjectConverter TrueObject='✅', FalseObject='⬜'}}" 
                                   FontSize="24" VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="2" Text="Enregistrer l'appel" Command="{Binding SaveCommand}" 
                BackgroundColor="{StaticResource Primary}" TextColor="White" 
                Margin="20" HeightRequest="50" CornerRadius="25" FontAttributes="Bold"/>
    </Grid>
</ContentPage>