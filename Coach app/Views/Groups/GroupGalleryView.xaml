<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Coach_app.ViewModels.Groups"
             x:Class="Coach_app.Views.Groups.GroupGalleryView"
             Title="Media Wall"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" Padding="20" ColumnDefinitions="*, Auto">
            <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                <Label Text="Souvenirs &amp; Analyse" FontSize="14" TextColor="Gray" TextTransform="Uppercase" CharacterSpacing="1"/>
                <Label Text="Galerie du Groupe" FontSize="24" FontAttributes="Bold" TextColor="Black"/>
            </VerticalStackLayout>

            <Button Grid.Column="1" 
                    Text="+" 
                    FontSize="24"
                    Command="{Binding ImportPhotoCommand}"
                    BackgroundColor="Black" 
                    TextColor="White" 
                    CornerRadius="25"
                    HeightRequest="50"
                    WidthRequest="50">
                <Button.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Opacity="0.3" Radius="5"/>
                </Button.Shadow>
            </Button>
        </Grid>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Photos}" Margin="10">

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeShape="RoundRectangle 15" 
                            StrokeThickness="0"
                            HeightRequest="200"
                            BackgroundColor="White">

                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="0.1"/>
                        </Border.Shadow>

                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GroupGalleryViewModel}}, Path=OpenPhotoCommand}" CommandParameter="{Binding .}"/>
                            </Grid.GestureRecognizers>

                            <Image Source="{Binding FilePath}" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill"/>

                            <BoxView VerticalOptions="End" HeightRequest="60">
                                <BoxView.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="Transparent" Offset="0.0" />
                                        <GradientStop Color="#CC000000" Offset="1.0" />
                                    </LinearGradientBrush>
                                </BoxView.Background>
                            </BoxView>

                            <Grid VerticalOptions="End" Padding="10" ColumnDefinitions="*, Auto">
                                <Label Grid.Column="0" Text="{Binding DateTaken, StringFormat='{0:dd MMM}'}" 
                                       TextColor="White" FontSize="12" FontAttributes="Bold"/>

                                <HorizontalStackLayout Grid.Column="1" Spacing="2">
                                    <Label Text="ðŸ‘¤" FontSize="12" TextColor="White"/>
                                </HorizontalStackLayout>
                            </Grid>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroupList>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />
                                        <VisualState x:Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="Opacity" Value="0.7" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateGroupList>
                            </VisualStateManager.VisualStateGroups>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
                    <Label Text="ðŸ“·" FontSize="60"/>
                    <Label Text="C'est vide ici !" FontSize="20" FontAttributes="Bold" TextColor="Gray"/>
                    <Label Text="Importe des photos pour analyser la progression." 
                           TextColor="Gray" HorizontalTextAlignment="Center" WidthRequest="250"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

        </CollectionView>
    </Grid>
</ContentPage>